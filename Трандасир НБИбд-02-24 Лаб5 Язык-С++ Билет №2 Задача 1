#include <iostream>
int main() {
    int n;
    std::cout << "Введите число: ";
    std::cin >> n;
    if (n < 1) 
    {
        std::cout << "Число меньше 1" << std::endl;
        return 1;
    }
    int sum = 0;
    for (int i = 1; i <= n; ++i) {
        sum += i;
    }
    std::cout << "Сумма чисел от 1 до " << n << " равна " << sum << "." << std::endl;
    return 0;
}
